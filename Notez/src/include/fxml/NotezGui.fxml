<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<bottom>
		<HBox fx:id="hBoxButtom" alignment="TOP_RIGHT" styleClass="background" stylesheets="@Stylesheets.css" BorderPane.alignment="CENTER">
			<children>
				<Hyperlink fx:id="fileLink" opacity="0d" text="" visible="true" />
				<ImageView fx:id="resize" pickOnBounds="true" preserveRatio="true" />
			</children>
		</HBox>
	</bottom>
	<top>
		<ToolBar fx:id="toolBar" nodeOrientation="RIGHT_TO_LEFT" styleClass="background-darker" stylesheets="@Stylesheets.css" BorderPane.alignment="CENTER">
			<items>
				<Button fx:id="btnClose" mnemonicParsing="false" onAction="#closeNote" opacity="0d" styleClass="background-darker" stylesheets="@Stylesheets.css" text="" visible="true">
					<tooltip>
						<Tooltip fx:id="tTipClose" text="Close the Notez" />
					</tooltip>
				</Button>
				<Button fx:id="btnSettings" mnemonicParsing="false" onAction="#openSettings" opacity="0d" styleClass="background-darker" stylesheets="@Stylesheets.css" text="" visible="true">
					<tooltip>
						<Tooltip text="Open Notez Settings" />
					</tooltip>
				</Button>
				<Button fx:id="btnAdd" mnemonicParsing="false" onAction="#addNewNote" opacity="0d" styleClass="background-darker" stylesheets="@Stylesheets.css" text="" visible="true">
					<tooltip>
						<Tooltip text="Add new Notez" />
					</tooltip>
				</Button>
				<ToggleButton fx:id="btnPin" mnemonicParsing="false" onAction="#pinNote" opacity="0d" styleClass="background-darker" stylesheets="@Stylesheets.css" text="" visible="true">
					<tooltip>
						<Tooltip text="Pin Notez on top" />
					</tooltip>
				</ToggleButton>
				<ImageView fx:id="pickNote" opacity="0d" pickOnBounds="true" preserveRatio="true" visible="true" />
				<TextField fx:id="txtTitle" nodeOrientation="LEFT_TO_RIGHT" styleClass="background-darker" stylesheets="@Stylesheets.css" />
			</items>
		</ToolBar>
	</top>
	<center>
		<StackPane fx:id="stack" BorderPane.alignment="CENTER">
			<children>
				<TextArea fx:id="txtNote" styleClass="background" stylesheets="@Stylesheets.css" BorderPane.alignment="CENTER" />
				<BorderPane fx:id="borderPaneSettings">
					<center>
						<TabPane fx:id="tabSettings" styleClass="background" stylesheets="@Stylesheets.css" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
							<tabs>
								<Tab fx:id="tabLocal" text="Lokal">
									<content>
										<VBox fx:id="vBoxLocalSet" />
									</content>
								</Tab>
								<Tab fx:id="tabRemote" text="Remote" />
							</tabs>
						</TabPane>
					</center>
					<bottom>
						<HBox alignment="TOP_RIGHT" styleClass="background" stylesheets="@Stylesheets.css" BorderPane.alignment="CENTER">
							<children>
								<Button fx:id="btnSaveSettings" mnemonicParsing="false" onAction="#saveSettings" styleClass="background" stylesheets="@Stylesheets.css" text="Speichern" />
								<Button fx:id="btnCancelSettings" mnemonicParsing="false" onAction="#cancelSettings" styleClass="background" stylesheets="@Stylesheets.css" text="Abbrechen" />
							</children>
						</HBox>
					</bottom>
				</BorderPane>
			</children>
		</StackPane>
	</center>
</BorderPane>
